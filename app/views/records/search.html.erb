<h2 class="title is-2">Search Results</h2>
<div id="records" class="grid-container">
    <% @results.each do |result| %>
        <div class="box record">
      <p>
      <%= link_to result.name, result %>
    </p>
    <%= image_tag(result.image, width: 200, alt:"result") if result.image.attached? %>
    <%= image_tag("rec.png", width: 200, alt:"result") if !result.image.attached? %>
    </div>
      <% end %>
      </div>